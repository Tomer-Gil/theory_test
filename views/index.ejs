<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="public/css/style.css">
        <title></title>
    </head>
    <body>
        <nav></nav>
        <main>
            <div><b>Total questions: </b><%= questions.length %></div>
            <ol>
                <% questions.forEach(function(question_object) { %>
                    <li>
                        <div><%= question_object.questionTitle %></div>
                        <ol>
                            <% question_object.descriptions.forEach(function(description) { %>
                                <li><%= description %></li>
                            <% }); %>
                        </ol>
                        <% if(question_object.optionalImage.source !== undefined) { %>
                            <img src="<%= question_object.optionalImage.source %>" alt="<%= question_object.optionalImage.alt %>" title="<%= question_object.optionalImage.title %>">
                        <% } %>
                        <div>תשובה נכונה: <%= question_object.correctAnswer + 1 %></div>
                        <div class="vehicles_types">
                            <span>סוגי רכב:</span>
                            <ol>
                                <% question_object.vehiclesTypes.forEach(function(vehicleType) { %>
                                    <li><%= vehicleType %></li>
                                <% }); %>
                            </ol>
                        </div>
                    </li>
                    <% question_object.description4 %>
                <% }); %>
            </ol>
        </main>
    </body>
</html>